{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "${songTitle}",
            "weight": "Bolder",
            "size": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "${artistName}",
            "isSubtle": true,
            "wrap": true
        },
        {
            "type": "Image",
            "url": "${albumArtUrl}",
            "size": "Medium"
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Open PWAmp",
            "url": "https://example.com"
        }
    ]
}